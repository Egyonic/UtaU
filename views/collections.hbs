
<div class="container" id="singer_search">
    <button id="collectionSearchBtn" type="button" class="btn btn-info float-right">搜索</button>
    <input id="collectionSearchInput" class="form-control col-3 float-right" type="search" placeholder="Search">
</div>

<nav class="pageScroll">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a id="collectionPrevious" class="page-link" href="#">上一页</a>
        </li>
        <li class="page-item active"><a id="collectionPage" class="page-link" href="#">1</a></li>
        <li class="page-item">
            <a id="collectionNext" class="page-link" href="#">下一页</a>
        </li>
    </ul>
</nav>

<div id="collectionCards">
    {{#each singers}}
        <div class="container singerCard">
            <div class="row singerRow">
                <div class="col-3 singer_left">
                    <h4 class="text-center singer_name">{{name}}</h4>
                    <h6 class="text-center singer_nickname">{{nickname}}</h6>
                    <img class="img-thumbnail singer_img" src={{image}}>
                </div>
                <div class="col-7 singer_center">
                    <div class="container singer_description">
                        {{description}}
                    </div>
                </div>
                <div class="col-2 singer_right">
                    <div class="singer_songs">
                        {{songs}}
                        <!--<a href="#" class="single_song"></a>-->
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>